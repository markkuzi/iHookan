<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/black"
tools:context=".presentation.tabs.home.Home">

<com.google.android.material.tabs.TabLayout
    android:id="@+id/tabSlider"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toTopOf="@id/sliderTabs"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:paddingBottom="8dp"
    app:tabMode="scrollable"
    app:tabIndicatorHeight="3dp"
    app:tabIndicatorColor="@color/purple"
    app:tabTextColor="@color/white"
    app:tabSelectedTextColor="@color/purple"
    app:tabIconTint="@color/menu_color_tab"
    app:tabRippleColor="@color/purple"
    android:background="@color/black"/>


<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/sliderTabs"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="5dp"
    android:background="@color/black"/>



</androidx.constraintlayout.widget.ConstraintLayout>